<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Toolbar Layout -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="Play Juegos"
        />

    <!-- Este bloque se repite 7 veces -->
    <!-- Bloque 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <!-- ImageView -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/games_angrybirds" /> <!-- Reemplaza con tu imagen -->

        <!-- RadioButton -->
        <RadioButton
            android:id="@+id/botoAngryBird"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Angry Bird " /> <!-- Texto del RadioButton -->
    </LinearLayout>
    <!-- Bloque 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <!-- ImageView -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/games_dragonfly" /> <!-- Reemplaza con tu imagen -->

        <!-- RadioButton -->
        <RadioButton
            android:id="@+id/dragonFly"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Dragon Fly" /> <!-- Texto del RadioButton -->
    </LinearLayout>
    <!-- Bloque 3 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <!-- ImageView -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/games_hillclimbingracing" /> <!-- Reemplaza con tu imagen -->

        <!-- RadioButton -->
        <RadioButton
            android:id="@+id/botoHillClimbing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Hill Climbing Racing" /> <!-- Texto del RadioButton -->
    </LinearLayout>

    <!-- Bloque 4 -->
    <!-- Bloque 5 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <!-- ImageView -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/games_radiantdefense" /> <!-- Reemplaza con tu imagen -->

        <!-- RadioButton -->
        <RadioButton
            android:id="@+id/botoRadiantDefense"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Radiant Defense" /> <!-- Texto del RadioButton -->
    </LinearLayout>

    <!-- Bloque 6 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <!-- ImageView -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/games_pocketsoccer" /> <!-- Reemplaza con tu imagen -->

        <!-- RadioButton -->
        <RadioButton
            android:id="@+id/botoPocketSoccer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Pocket Soccer" /> <!-- Texto del RadioButton -->
    </LinearLayout>
    <!-- Bloque 7 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <!-- ImageView -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/games_ninjump" /> <!-- Reemplaza con tu imagen -->

        <!-- RadioButton -->
        <RadioButton
            android:id="@+id/botoNinjaJump"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Ninja Jump" /> <!-- Texto del RadioButton -->
    </LinearLayout>

</LinearLayout>
</ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        app:srcCompat="@android:drawable/ic_input_add"
        android:contentDescription="@string/fab_description2"
        />
    <!-- Utiliza app:srcCompat si estÃ¡s utilizando soporte de vectores -->

</FrameLayout>